<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AnswerRow_ContainerLL"
    style="@style/FWV">

    <LinearLayout
        android:id="@+id/AnswerRow_HeaderLL"
        style="@style/TapeRow_PublicationHeader_LL">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/AnswerRow_AuthorAvatarCIV"
            style="@style/TapeRow_AuthorAvatar_IV" />
        <LinearLayout
            android:id="@+id/AnswerRow_AuthorDataLL"
            style="@style/TapeRow_AuthorData_LL">

            <TextView
                android:id="@+id/AnswerRow_AuthorNameTV"
                style="@style/TapeRow_AuthorName_TV" />
            <TextView
                android:id="@+id/AnswerRow_AnswerTextTV"
                style="@style/AnswerRow_AnswerText_TV" />
            <LinearLayout style="@style/WWH">

                <TextView
                    android:id="@+id/AnswerRow_AnswerTimeAgoTextTV"
                    style="@style/AnswerRow_AnswerTimeAgo_TV"/>

                <TextView
                    android:id="@+id/AnswerRow_SelectRecipientTV"
                    style="@style/AnswerRow_SelectRecipient_TV" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/AnswerRow_HLineLL"
        style="@style/FFH">

    </LinearLayout>

</LinearLayout>